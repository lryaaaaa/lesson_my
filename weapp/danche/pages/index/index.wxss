/**index.wxss**/
.map{
  width: 100%;
  height: 100%;
}
.top-tips{
   position: absolute;
   width: 710rpx;
   height: 108rpx;
   left: 50%;
   z-index: 999;
   transform: translateX(-50%);
   top: 12rpx;
   /* 内部成为一个弹性布局方式
   原来的块级能力会消失   inline-block；  两列式布局
   
   */
   display:flex;
   background: #fff;
   align-items: center;
   padding-left: 20rpx;
   font-size: 14pt;
   color: #666;
}
.top-icon{
  width: 74rpx;
  height: 74rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}
.top-text{
  /* 弹性布局中的主元素（剩下全占），手机宽度不一样 */
  flex: 1;
}
.map-icon{
  position: absolute;
  right: 20rpx;
  width: 76rpx;
  height: 76rpx;
}
.map-icon_reset{
  bottom: 42rpx;
}